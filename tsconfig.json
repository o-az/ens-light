{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "target": "ES6",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "allowJs": true,
    "module": "ESNext",
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "esm": true,
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ESNext"
    },
  }
}